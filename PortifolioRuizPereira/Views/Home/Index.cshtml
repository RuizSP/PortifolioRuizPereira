    <section id="talk" class="align-content-center container-fluid bg-dark text-light mt-5">
        <div class="w-100 text-center mb-3">
            <h2>Entre Em contato:</h2>
        </div>
        <div>
            <div class="container-fluid w-50">
                <div class="row p-2">
                    <div>
                        <h3>Deixe uma mensagem:</h3>
                        <form asp-controller="Home" asp-action="Talk" method="post" class="form-group mb-5">
                            <div class="form-group mt-2">
                                <label class="border-2 border-start mb-2" for="nome"><span class="ms-1">Nome:</span></label>
                                <input class="form-control" type="text" name="nome" placeholder="Seu nome" required />
                            </div>
                            <div class="form-group mt-2">
                                <label class="border-2 border-start mb-2" for="email"><span class="ms-1">Email:</span></label>
                                <input class="form-control" type="email" name="email" placeholder="yourbest@email.com" required />
                            </div>
                            <div class="form-group mt-2">
                                <label class="border-2 border-start mb-2" for="assunto"><span class="ms-1">Assunto:</span></label>
                                <input class="form-control" type="text" name="assunto" placeholder="assunto" required />
                            </div>
                            <div class="form-group mt-2">
                                <label class="border-2 border-start mb-2" for="message"><span class="ms-1">Mensagem:</span></label>
                                <textarea class="form-control" name="message" placeholder="your message here" rows="4" cols="50" required></textarea>
                            </div>

                            <input class="btn btn-success mt-2" type="submit" value="Enviar">
                        </form>
                    </div>
                </div>

                <div>
                    <h3>Redes Sociais: </h3>
                    <ul class="list-inline mb-5">
                        <li class="list-inline-item">
                            <a class="btn btn-outline-success" href="#">
                                <img src="~/imgs/icons/whatsapp.svg" alt="whatsapp icon" />
                                WhatsApp
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="btn btn-outline-success" href="#">
                                <img src="~/imgs/icons/instagram.svg" alt="instagram icon" />
                                Instagram
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="btn btn-outline-success" href="#">
                                <img src="~/imgs/icons/linkedin.svg" alt="linkedin icon" />
                                Linkedin
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>